---
// note that this component is made for use specifically in mdx files, to ease
// working with images without the use of imports. it assumes (already
// optimized) images are in the /public/images/ folder.

export interface Props {
  imgName: string;
  class?: string;
}

const { imgName, class: className } = Astro.props;
---

<picture>
  <source
    type="image/webp"
    srcset={`/images/${imgName}.webp 1x, /images/${imgName}@2x.webp 2x`}
  />
  <source
    srcset={`/images/${imgName}.png 1x, /images/${imgName}@2x.png 2x`}
    type="image/png"
  />
  <img class={className} src={`/images/${imgName}.png`} />
</picture>
